<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Neo.FileStorage.Node</PackageId>
    <RootNamespace>Neo.FileStorage</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Update="FileStorage\config.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
    <None Update="Resources\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Services\Control\Service\service.proto" GrpcServices="Both" Link="Services\Control\Service\service.proto" />
    <Protobuf Include="Services\Control\Service\types.proto" GrpcServices="None" Link="Services\Control\Service\types.proto" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Akka" Version="1.4.19" />
    <PackageReference Include="CsvHelper" Version="27.0.3" />
    <PackageReference Include="Grpc.Tools" Version="2.36.1">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Multiformats.Address" Version="1.1.1" />
    <PackageReference Include="NeoFS.API" Version="0.0.46" />
    <PackageReference Include="Neo.ConsoleService" Version="1.0.0" />
    <PackageReference Include="NetTopologySuite" Version="2.2.0" />
    <PackageReference Include="NetTopologySuite.Features" Version="2.1.0" />
    <PackageReference Include="NetTopologySuite.IO.GeoJSON" Version="2.0.4" />
    <PackageReference Include="Sprache" Version="2.3.1" />
    <PackageReference Include="ZstdNet" Version="1.4.5" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\LevelDBStore\LevelDBStore.csproj" />
    <ProjectReference Include="..\RpcClient\RpcClient.csproj" />
    <ProjectReference Include="..\RpcServer\RpcServer.csproj" />
  </ItemGroup>

</Project>
